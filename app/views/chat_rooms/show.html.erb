<div class="container">
  <div class="js-messaging-container messaging"
    data-chat-room-id="<%= @chat_room.id %>" data-user-id="<%= current_user.id %>">
    <div class="inbox_msg">
      <div class="inbox_people">
        <div class="headind_srch">
          <div class="recent_heading">
            <h4>Recent</h4>
          </div>
        </div>

        <div class="inbox_chat">
          <% @chat_rooms.each do |chat_room| %>
            <%= render "chat_rooms/chat_room_with_newest_message", chat_room: chat_room,
              message: chat_room.messages.last, current_chat_room_id: @chat_room.id %>
          <% end %>
        </div>
      </div>

      <div class="mesgs">
        <div class="js-msg_history msg_history">
          <% @messages.each do |message| %>
            <% if message.user == current_user %>
              <%= render "chat_rooms/user_message", message: message, user: message.user %>
            <% else %>
              <%= render "chat_rooms/other_user_message", message: message, user: message.user %>
            <% end %>
          <% end %>
        </div>

        <div class="type_msg">
          <div class="input_msg_write">
            <input type="text" class="write_msg js-message-content" placeholder="Type a message" />
            <button class="msg_send_btn js-btn-send-message" type="button">
              <i class="fa fa-paper-plane-o" aria-hidden="true"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
